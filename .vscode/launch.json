    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\build_json.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "nobuild",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\build_json.js",
            "args": ["nobuild"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "nobuild debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\build_json.js",
            "args": ["nobuild", "debug"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Current File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\${file}",
            "args": ["nobuild", "debug"]
        }        
    ]
}